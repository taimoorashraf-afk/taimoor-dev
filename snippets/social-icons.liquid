{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

<style>

  .footer-block__details-content h4.social-title {
    font-size: 18px;
    line-height: 26px;
    margin: 142px 0px 14px;
    color: #C2BFBA;
}

.footer__blocks-wrapper .footer__content-bottom {
    padding-top: 2rem;
}
  
  .list-social .list-social__item:first-child a.link.list-social__link {
    padding-left: 0;
}

@media (max-width: 991px){
  .footer-block__details-content h4.social-title{
    margin: 65px 0px 14px;
  }
}
</style>

<h4 class="social-title">Social</h4>
<ul class="list-unstyled list-social{% if class %} {{ class}}{% endif %}" role="list">
  {%- if settings.social_instagram_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_instagram_link }}" target="_blank" class="link list-social__link">
        {%- render 'icon-instagram' -%}
        <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
      </a>
    </li>
  {%- endif -%}
