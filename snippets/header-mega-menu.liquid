{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

{% if customer %}
  {% assign mainMenu = linklists['logged-in-header-menu-left'] %}
{% else %}
  {% assign mainMenu = linklists['main-menu'] %}
{% endif %}

<nav class="header__inline-menu">
  <ul class="list-menu list-menu--inline" role="list">
    {%- for link in mainMenu.links -%}
      <li>
        {% if link.title == 'Products' %}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <a class="products-menu-item" href="{{ link.url }}"
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                > 
                  {{- link.title | escape -}}
                </a>
              </summary>
                
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <div class="main-menu-container page-width {% if customer %}logged-user{% else %}non-logged-user{% endif %}">
                    <ul
                      class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                      role="list"
                    > 
                      {% if customer %}
                        {% assign productsMegaMenu = linklists['logged-in-products-dropdown-menu']  %}
                        {% else %}
                        {% assign productsMegaMenu = linklists['main-navigation-dropdown']  %}
                      {% endif %}
                          {% for childlink in productsMegaMenu.links -%}
                            <li class="mega-menu-level-2 logged-in-mega-menus">
                                <a
                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                                  href="{{ childlink.url }}"
                                  class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                                  {% if childlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ childlink.title | escape }}
                                </a>
                              
                                {%- if childlink.links != blank -%}
                                    <ul class="list-unstyled" role="list">
                                    {%- for grandchildlink in childlink.links -%}
                                      <li class="mega-menu-level-3">
                                        <a
                                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                          href="{{ grandchildlink.url }}"
                                          class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                          {% if grandchildlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                        
                                        {%- if grandchildlink.links != blank -%}
                                          <ul class="list-unstyled" role="list">
                                            {%- for secondgrandchildlink in grandchildlink.links -%}
                                              <li class="mega-menu-level-4">
                                                <a
                                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}--{{ secondgrandchildlink.handle }}"
                                                  href="{{ secondgrandchildlink.url }}"
                                                  class="mega-menu__link link{% if secondgrandchildlink.current %} mega-menu__link--active{% endif %}"
                                                  {% if secondgrandchildlink.current %}
                                                    aria-current="page"
                                                  {% endif %}
                                                >
                                                  {{ secondgrandchildlink.title | escape }}
                                                </a>
                                              </li>
                                            {%- endfor -%}   
                                            {% unless customer %}
                                              <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="48" height="48" />
                                              {% else %}
                                            {% endunless %} 
                                            </ul>
                                        {%- endif %}
                                      </li>
                                    {%- endfor -%}

                                    {% unless customer %}
                                        <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="48" height="48" />
                                      {% else %}
                                    {% endunless %}
                                  </ul>
                              {%- endif %}
                            </li>
                          {%- endfor -%}
                    </ul>
                            
                  <a href="{{ section.settings.mega_menu_url_right }}" class="mega-menu-right-img">
                    <img src="{{ section.settings.mega_menu_img_right | img_url: 'master' }}" width="313" height="197" alt="mega menu image" />
                  </a>
                </div>
              </div>
            </details>
          </header-menu>
        {% elsif link.title == 'Why DMF' %}
          <!-- Dropdown for Why DMF -->
          {% if customer %}
            {% assign whyDMFMenu = linklists['dealers-why-dmf-dropdown'] %}
          {% else %}
            {% assign whyDMFMenu = linklists['why-dmf-dropdown'] %}
          {% endif %}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset"
              >
                <a class="why-dmf-menu-item" href="{{ link.url }}"
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </a>
              </summary>
              
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                tabindex="-1"
              >
                <div class="main-menu-container page-width">
                  <ul class="mega-menu__list" role="list">
                    {%- for childlink in whyDMFMenu.links -%}
                      <li class="mega-menu-level-2">
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          href="{{ childlink.url }}"
                          class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ childlink.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>

                  <a href="{{ section.settings.whydmf_mega_menu_url_right }}" class="mega-menu-right-img">
                    <img src="{{ section.settings.whydmf_mega_menu_img_right | img_url: 'master' }}" width="313" height="197" alt="mega menu image" />
                  </a>
                </div>
              </div>
            </details>
          </header-menu>
        
        {% elsif link.title == 'Shop' %}
            <!-- Dropdown for Shop -->
            <header-menu>
              <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
                <summary
                  id="HeaderMenu-{{ link.handle }}"
                  class="header__menu-item list-menu__item link focus-inset"
                >
                  <a class="products-menu-item" href="{{ link.url }}"
                    {%- if link.child_active %}
                      class="header__active-menu-item"
                    {% endif %}
                  > 
                    {{- link.title | escape -}}
                  </a>
                </summary>
                  
                <div
                  id="MegaMenu-Content-{{ forloop.index }}"
                  class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                  tabindex="-1"
                >
                  <div class="main-menu-container page-width">
                      <ul
                        class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                        role="list"
                      > 
                        {% if customer %}
                            {% for childlink in linklists.dealers-shop-dropdown-menu.links -%}
                              <li class="mega-menu-level-2 shop-levels">
                                  <a
                                    id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                                    href="{{ childlink.url }}"
                                    class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                
                                  {%- if childlink.links != blank -%}
                                      <ul class="list-unstyled" role="list">
                                      {%- for grandchildlink in childlink.links -%}
                                        <li class="mega-menu-level-3">
                                          <a
                                            id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                            href="{{ grandchildlink.url }}"
                                            class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                            {% if grandchildlink.current %}
                                              aria-current="page"
                                            {% endif %}
                                          >
                                            {{ grandchildlink.title | escape }}
                                          </a>
                                          
                                          {%- if grandchildlink.links != blank -%}
                                            <ul class="list-unstyled" role="list">
                                              {%- for secondgrandchildlink in grandchildlink.links -%}
                                                <li class="mega-menu-level-4">
                                                  <a
                                                    id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}--{{ secondgrandchildlink.handle }}"
                                                    href="{{ secondgrandchildlink.url }}"
                                                    class="mega-menu__link link{% if secondgrandchildlink.current %} mega-menu__link--active{% endif %}"
                                                    {% if secondgrandchildlink.current %}
                                                      aria-current="page"
                                                    {% endif %}
                                                  >
                                                    {{ secondgrandchildlink.title | escape }}
                                                  </a>
                                                </li>
                                              {%- endfor -%}   
                                              {% unless customer %}
                                                <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="48" height="48" />
                                                {% else %}
                                              {% endunless %} 
                                              </ul>
                                          {%- endif %}
                                        </li>
                                      {%- endfor -%}

                                      {% unless customer %}
                                          <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="48" height="48" />
                                        {% else %}
                                      {% endunless %}
                                    </ul>
                                {%- endif %}
                            </li>
                          {%- endfor -%}
                        {% else %}
                          {% for childlink in linklists.main-navigation-dropdown.links -%}
                            <li class="mega-menu-level-2">
                                <a
                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                                  href="{{ childlink.url }}"
                                  class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                                  {% if childlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ childlink.title | escape }}
                                </a>
                              
                                {%- if childlink.links != blank -%}
                                  <ul class="list-unstyled" role="list">
                                    {%- for grandchildlink in childlink.links -%}
                                      <li class="mega-menu-level-3">
                                        <a
                                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                          href="{{ grandchildlink.url }}"
                                          class="mega-menu__link link{% if grandchildlink.current %} mega-menu__link--active{% endif %}"
                                          {% if grandchildlink.current %}
                                            aria-current="page"
                                          {% endif %}
                                        >
                                          {{ grandchildlink.title | escape }}
                                        </a>
                                        
                                        {%- if grandchildlink.links != blank -%}
                                          <ul class="list-unstyled" role="list">
                                            {%- for secondgrandchildlink in grandchildlink.links -%}
                                              <li class="mega-menu-level-4">
                                                <a
                                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}--{{ secondgrandchildlink.handle }}"
                                                  href="{{ secondgrandchildlink.url }}"
                                                  class="mega-menu__link link{% if secondgrandchildlink.current %} mega-menu__link--active{% endif %}"
                                                  {% if secondgrandchildlink.current %}
                                                    aria-current="page"
                                                  {% endif %}
                                                >
                                                  {{ secondgrandchildlink.title | escape }}
                                                </a>
                                              </li>
                                            {%- endfor -%}    
                                            </ul>
                                        {%- endif %}
                                      </li>
                                    {%- endfor -%}
                                    <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="48" height="48" />
                                    <div class="icon-level-4">
                                      <img src="{{ section.settings.mega_menu_icons | img_url: 'master' }}" width="59" height="59" />
                                    </div>
                                  </ul>
                                {%- endif %}
                            </li>
                          {%- endfor -%}
                      {% endif %}
                    </ul>
                              
                    <a href="{{ section.settings.mega_menu_url_right }}" class="mega-menu-right-img">
                      <img src="{{ section.settings.mega_menu_img_right | img_url: 'master' }}" width="313" height="197" alt="mega menu image" />
                    </a>
                  </div>
                </div>
              </details>
            </header-menu>
            

        {% elsif link.title == 'Solutions' %}
            <!-- Dropdown for Solutions -->
            {% if customer %}
              {% assign solutionsMenu = linklists['dealers-solutions-dropdown'] %}
            {% else %}
              {% assign solutionsMenu = linklists['solutions-dropdown'] %}
            {% endif %}

             <header-menu>
              <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu">
                <summary
                  id="HeaderMenu-{{ link.handle }}"
                  class="header__menu-item list-menu__item link focus-inset"
                >
                  <a href="{{ link.url }}"
                    {%- if link.child_active %}
                      class="header__active-menu-item"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </a>
                </summary>
                  
                <div
                  id="MegaMenu-Content-{{ forloop.index }}"
                  class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
                  tabindex="-1"
                >
                  <div class="main-menu-container page-width">
                    <ul
                      class="mega-menu__list {% if link.levels == 1 %} mega-menu__list--condensed{% endif %}"
                      role="list"
                    >
                      {% for childlink in solutionsMenu.links -%}
                        <li class="mega-menu-level-2">
                          <a
                            id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                            href="{{ childlink.url }}"
                            class="mega-menu__link mega-menu__link--level-2 link{% if childlink.current %} mega-menu__link--active{% endif %}"
                            {% if childlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ childlink.title | escape }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                    <a href="{{ section.settings.solutions_mega_menu_url_right }}" class="mega-menu-right-img">
                      <img src="{{ section.settings.solutions_mega_menu_img_right | img_url: 'master' }}" width="313" height="197" alt="mega menu image" />
                    </a>
                  </div>
                </div>
              </details>
             </header-menu>
        {% else %}
          <a id="HeaderMenu-{{ link.handle }}" href="{{ link.url }}" class="header__menu-item list-menu__item link link--text focus-inset" {% if link.current %} aria-current="page" {% endif %}>
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {% endif %}
      </li>
    {%- endfor -%}
  </ul>
</nav>