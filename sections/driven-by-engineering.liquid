<section class="driven-of-lights">
    <div class="container">
        <div class="row">
            <div class="driven-animation-image">
                <img src="{{ section.settings.driven_img | img_url: 'original' }}" width="711" height="679" alt="driven of lights" />
            </div>
            <div class="driven-content-area">
                <span class="section-top-tagline font-calling-code">{{ section.settings.driven_heading_topline }}</span>
                <h2 class="font-neue-light">{{ section.settings.driven_heading }} <br><span class="font-austin-italic">{{ section.settings.driven_heading_italic }}</span></h2>
                <p class="font-neue-roman">{{ section.settings.driven_content }}</p>
                <a class="learn-more-arrow btn-transparent font-neue-roman" href="{{ section.settings.driven_learnmore }}">{{ section.settings.driven_learnmore_text }} 
                    <svg id="Layer_2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.04 11.49">
                        <defs>
                            <style>.cls-1{stroke-miterlimit:5;}.cls-1,.cls-2{fill:none;stroke:#000;stroke-width:1.5px;}.cls-2{stroke-linejoin:round;}</style>
                        </defs>
                        <g id="Layer_2-2">
                            <polyline class="cls-1" points="12.45 .54 17.95 5.74 12.45 10.94"/>
                            <line class="cls-2" y1="5.74" x2="17.95" y2="5.74"/>
                        </g>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</section>

<style type="text/css">
    section.driven-of-lights {
        position: relative;
        margin: 100px 0px;
        padding: 0;
    }
    section.driven-of-lights .row {
        display: flex;
        justify-content: space-between;
    }
    .driven-content-area {
        width: 494px;
        min-width: 494px;
        max-width: 100%;
        padding-top: 51px;
    }
    .driven-animation-image {
        overflow: hidden;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        width: 711px;
        height: 38.889vw;
        overflow: hidden;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        left: 0px;
    }
    .driven-animation-image img{
        width: 711px;
        max-width: 100%;
        height: 38.889vw;
        object-fit: cover;
        border-top-right-radius: 8px;
        border-bottom-right-radius: 8px;
        min-height: 100%;
        max-height: 100%;
        display: block;
        top: 50%;
        transform: translateY(-50%);
        position: absolute;
        left: 0px;
    }
    span.section-top-tagline {
        font-size: 14px;
        line-height: 28px;
        text-transform: uppercase;
        letter-spacing: 0.65px;
        margin-bottom: 3px;
    }
    .driven-content-area h2 {
        font-size: 4.167vw;
        line-height: 4.653vw;
        letter-spacing: 0.65px;
        margin: 0px 0px 36px 0px;
    }
    .driven-content-area h2 span.font-austin-italic{
        font-size: 4.444vw;
        line-height: 4.722vw;
    }
    .imp-contents {
        margin: 0px;
        font-size: 16px;
        line-height: 26px;
        letter-spacing: 0.65px;
    }

    .imp-contents p {
        margin: 0px;
    }
    .driven-content-area a.learn-more-arrow {
        margin-top: 40px;
        background-color: transparent;
    }

    /** Responsive */
    @media (min-width: 1500px){
        .driven-content-area h2{
            font-size: 60px;
            line-height: 67px;
        }
        .driven-content-area h2 span.font-austin-italic{
            font-size: 64px;
            line-height: 68px;
        }
    }

    @media (max-width: 1366px) and (min-width: 1200px){
        .driven-animation-image{
            width: 600px;
        }
    }

    @media (max-width: 1199px) and (min-width: 992px){
        .driven-animation-image img{
            width: 400px;
            height: 500px;
        }
        .driven-animation-image{
            width: 400px;
        }
    }

    @media (max-width: 991px){
        section.driven-of-lights .row {
            flex-flow: column;
        }

        .driven-content-area h2 {
            font-size: 50px;
            line-height: 57px;
            margin-bottom: 20px;
        }

        .driven-content-area{
            min-width: unset;
        }
        .driven-content-area h2 span.font-austin-italic{
            font-size: 54px;
            line-height: 58px;
        }
        .driven-content-area a.learn-more-arrow {
            margin-top: 30px;
        }
        .driven-animation-image, .driven-content-area {
            width: 100%;
        }
        .driven-animation-image{
            position: relative;
            border-radius: 8px;
            height: auto;
            max-width: 100%;
            width: 100%;
        }
        .driven-animation-image img{
            border-radius: 8px;
            position: relative;
            top: unset; 
            transform: none;
            min-height: 377px;
            width: 100%;
        }

        section.driven-of-lights {
            padding: 10px 0px;
            margin: 0px;
        }
        .driven-content-area {
            padding: 28px 0px 0px;
        }
    }
</style>

{% schema %}
{
    "name": "Driven By Engineering",
    "settings": [
        {
            "type": "text",
            "id": "driven_heading_topline",
            "label": "Heading topline"
        },
        {
            "type": "text",
            "id": "driven_heading",
            "label": "Section heading"
        },
        {
            "type": "text",
            "id": "driven_heading_italic",
            "label": "Section heading in italic"
        },
        {
            "type": "textarea",
            "id": "driven_content",
            "label": "Section content"
        },
        {
            "type": "text",
            "id": "driven_learnmore_text",
            "label": "Learn more button text"
        },
        {
            "type": "text",
            "id": "driven_learnmore",
            "label": "Learn more URL"
        },
        {
            "type": "image_picker",
            "id": "driven_img",
            "label": "Upload Image"
        }
    ],
    "presets": [
        {
        "name": "Driven By Engineering",
        "category": "Custom"
        }
    ] 
}
{% endschema %}