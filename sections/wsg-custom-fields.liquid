          type="text"
          value=""
          placeholder="{{ block.settings.company }}"
          class="full-width"
          {% if block.settings.isRequired == true %}
            required
          {% endif %} />
        </div>
    {% comment %} Dropdown block {% endcomment %}
    {% when 'dropdown_block' %}
