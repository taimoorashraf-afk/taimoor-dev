<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function() {
  // Select all details elements with class mega-menu across the entire header
  let items = document.querySelectorAll("details.mega-menu");
  let stickyHeader = document.querySelector(".section-header");
  let svgLogoAnchor = document.querySelector(".section-header a.header__heading-link");
  let svgLogo = document.querySelector(".section-header a.header__heading-link svg");
  let svgLogoAnchorSticky = document.querySelector(".stickyHeader a.header__heading-link");
  let svgLogoSticky = document.querySelector(".stickyHeader a.header__heading-link svg");
  let nestedStickyHeader = document.querySelector(".section-header .header.header");

  items.forEach(item => {
    let timeout;

    // Handle mouseenter
    item.addEventListener("mouseenter", () => {
      clearTimeout(timeout);  // Clear any existing timeout
      timeout = setTimeout(() => {
        item.setAttribute("open", true);
      }, 100); // Delay before opening the menu

      if (nestedStickyHeader) {
        nestedStickyHeader.style.borderBottomLeftRadius = "0px";
        nestedStickyHeader.style.borderBottomRightRadius = "0px";
      }
      if (svgLogoAnchor) {
        svgLogoAnchor.style.setProperty('top', '0px');
      }
      if (svgLogo) {
        svgLogo.style.setProperty('width', '90px');
      }
    });

    // Handle mouseleave
    item.addEventListener("mouseleave", () => {
      clearTimeout(timeout); // Clear the timeout to prevent immediate reopening
      timeout = setTimeout(() => {
        item.removeAttribute("open");
      }, 300); // Delay before closing the menu
      
      if (nestedStickyHeader) {
        nestedStickyHeader.style.borderBottomLeftRadius = "8px";
        nestedStickyHeader.style.borderBottomRightRadius = "8px";
      }
      if (svgLogoAnchorSticky) {
        svgLogoAnchorSticky.style.setProperty('top', '0px');
      }
      if (svgLogoSticky) {
        svgLogoSticky.style.setProperty('width', '90px');
      }
    });

    // Handle keyboard focus for accessibility
    item.addEventListener("focus", () => {
      item.setAttribute("open", true);
    });

    item.addEventListener("blur", () => {
      item.removeAttribute("open");
    });
  });

  // Handle mouseleave for mega menu content
  document.querySelectorAll('.mega-menu__content').forEach(dropdown => {
    dropdown.addEventListener("mouseleave", () => {
      items.forEach(item => {
        item.removeAttribute("open");
      });
      if (svgLogoAnchorSticky) {
        svgLogoAnchorSticky.style.setProperty('top', '0px');
      }
      if (svgLogoSticky) {
        svgLogoSticky.style.setProperty('width', '90px');
      }
    });
  });
});
</script>

