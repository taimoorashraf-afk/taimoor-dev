            width: 100%;
            flex-wrap: wrap !important;
            flex-flow: row;
            gap: 0px 28px;
            margin-bottom: 15px;
            justify-content: flex-start;
            bottom: 0px;
        }
        .animated-tabs-section .container {
            padding: 10px 17px 28px;
            background-repeat: repeat !important;
            background-size: 750px !important;
        }
        .products-tab:last-child{
            margin-bottom: 15px;
        }
        section.animated-tabs-section .section-heading{
            font-size: 50px; 
            line-height: 57px;
            margin-bottom: 9px;
        }
        .products-tab {
            width: max-content;
            gap: 16px;
            margin-bottom: 15px;
        }
        .product-tab-rightarea{
            width: 100%;
            flex-wrap: wrap;
        }
        .product-tab-rightarea img {
            width: 100%;
            height: auto;
            left: 0px;
            top: 0px;
            object-fit: contain;
        }
        .products-animated-tabs .products-carousel .content{
            width: 100%;
            margin: 0 auto;
            padding: 25px 30px;
            top: 0px;
            left: auto;
            right: auto;
            height: auto;
        }
        .product-customizer .option-set-title{
            margin: 5px 0px;
            line-height: 42px;
            min-height: unset;
        }
        .products-animated-tabs .slide img{
            width: 100%;
            top: 0px;
            margin-bottom: 20px;
            margin-left: 0;
        }
        .products-animated-tabs{
            flex-wrap: wrap;
        }
        .slide.active{
            flex-wrap: wrap;
        }
    }
</style>

<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', () => {
        const slides = document.querySelectorAll('.slide');
        const dots = document.querySelectorAll('.products-dot');
        const totalSlides = slides.length;

        function activateSlide(index) {
            slides.forEach(s => s.classList.remove('active'));
            dots.forEach(d => d.classList.remove('active'));

            slides[index]?.classList.add('active');

            const activeSlideDots = slides[index]?.querySelectorAll('.products-dot');
            activeSlideDots?.forEach((dot) => {
                if (dot.getAttribute('data-index') == index) {
                    dot.classList.add('active');
                }
            });

            // debugger
            // Update slide pagination (e.g., 1/3)
            if(slides.length){
                const pagination = slides[index]?.querySelector('.products-pagination');
                pagination.textContent = `${parseInt(index) + 1}/${totalSlides}`;
            }
        }

        // Add click event listeners to dots
        dots.forEach((dot) => {
            dot.addEventListener('click', () => {
                const index = dot.getAttribute('data-index');
                activateSlide(index);
            });
        });

        // Initialize with pagination for the first slide
        activateSlide(0);
    });
</script>



