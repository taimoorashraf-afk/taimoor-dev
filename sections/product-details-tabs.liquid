<section class="animated-tabs-section" id="product_details">
    <div class="container p-titles">
        <h2 class="section-heading font-neue-light">Product Details</h2>
    </div>
    <div class="container" style="background: url({{ 'product-tab-sections.png' | asset_url }});">
        <div class="products-animated-tabs">
            <!-- Left side Tabs -->
            <div class="products-tabs">
                {% for block in section.blocks %}
                  {% if block.type == 'tab_block' %}
                  {% assign loop_index = forloop.index %}
                      <div class="products-tab font-calling-code"><div class="tabicon-img"><img src="{{ block.settings.tab_icon | image_url }}" alt="tab icon" /></div> {{ block.settings.tab_heading }}</div>
                  {% endif %}
                {% endfor %}
            </div>

            <div class="product-tab-rightarea">
              <!-- Right side Carousel -->
                <div class="products-carousel">
                    {% for block in section.blocks %}
                    {% if block.type == 'slide_block' %}
                    {% assign loop_index = forloop.index %}

                        <div class="slide {% if loop_index == 0 %} active {% endif %}">
                            <img src="{{ block.settings.slide_image | img_url: 'master' }}" alt="Slide">
                            <div class="content">
                                <h2 class="font-neue-roman">{{ block.settings.product_slide_title }}</h2>
                                <p class="font-neue-roman">{{ block.settings.product_slide_content }}</p>
                                <div class="carousel-bottom-paginations">
                                    <div class="products-pagination font-neue-roman"></div>
                                    <div class="products-dots">
                                        <span class="products-dot active" data-index="0"></span>
                                        <span class="products-dot" data-index="1"></span>
                                        <span class="products-dot" data-index="2"></span>
                                    </div>
                                </div> 
                            </div>
                        </div>
                        
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
            
        </div>
    </div>
</section>

<style type="text/css">
