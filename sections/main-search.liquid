{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
  
  # Separate exact and similar matches
  assign exact_matches = ''
  assign similar_matches = ''
  assign exact_match_count = 0
  assign similar_match_count = 0
  
  # Convert search terms to lowercase for comparison
  assign search_terms_lower = search.terms | downcase
  assign search_words = search_terms_lower | split: ' '
  
  for item in search.results
    if item.object_type == 'product' and item.tags contains 'no_search'
      continue
    endif
    
    assign is_exact = false
    
    # Check for exact matches in various fields
    if item.object_type == 'product'
      assign title_lower = item.title | downcase
      assign sku_lower = item.selected_or_first_available_variant.sku | downcase
      assign vendor_lower = item.vendor | downcase
      
      # Check if full search term is in title
      if title_lower contains search_terms_lower
        assign is_exact = true
      # Check if SKU matches
      elsif sku_lower == search_terms_lower
        assign is_exact = true
      # Check if vendor matches exactly
      elsif vendor_lower == search_terms_lower
        assign is_exact = true
      # Check if all search words are in title
      else
        assign all_words_found = true
        for word in search_words
          unless title_lower contains word
            assign all_words_found = false
            break
          endunless
        endfor
        if all_words_found
          assign is_exact = true
        endif
      endif
    elsif item.object_type == 'article'
      assign title_lower = item.title | downcase
      if title_lower contains search_terms_lower
        assign is_exact = true
      endif
    elsif item.object_type == 'page'
      assign title_lower = item.title | downcase
      if title_lower contains search_terms_lower
        assign is_exact = true
      endif
    endif
    
    # Categorize the item
    if is_exact
      if exact_matches == ''
        assign exact_matches = item.id
      else
        assign exact_matches = exact_matches | append: ',' | append: item.id
      endif
      assign exact_match_count = exact_match_count | plus: 1
    else
      if similar_matches == ''
        assign similar_matches = item.id
      else
        assign similar_matches = similar_matches | append: ',' | append: item.id
      endif
      assign similar_match_count = similar_match_count | plus: 1
    endif
  endfor
  
  assign exact_match_ids = exact_matches | split: ','
  assign similar_match_ids = similar_matches | split: ','
-%}

