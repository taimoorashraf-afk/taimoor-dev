<section class="solutions-img-grids">
    <div class="solutions-contents">
        <div class="container">
            <div class="solutions-top-row">
                <h2 class="font-neue-light">{{ section.settings.grid_top_heading }} <span class="font-austin-italic">{{ section.settings.grid_top_heading_italic }}</span></h2>
                <p class="font-neue-roman">{{ section.settings.grid_top_content }}</p>
            </div>        
        </div>
        <div class="solution-img-grid-sections">
            <div class="container">
                <div class="solution-grids-images">
                    {% for block in section.blocks %}
                        {% if block.type == 'image_block' %}
                        {% assign loop_index = forloop.index %}
                            <div class="solution-grids-img-item">
                                <img src="{{ block.settings.animated_box_image | img_url: 'original' }}" width="599" height="845" alt="solution image" />
                                <div class="solution-grid-img-content">
                                    <h2 class="text-light font-neue-light">{{ block.settings.animated_box_heading }} <span class="font-austin-italic">{{ block.settings.animated_box_heading_italic }}</span></h2>
                                    <p class="text-light font-neue-roman">{{ block.settings.animated_box_content }}</p>
                                    <a class="learn-more-arrow btn-light font-neue-roman" href="{{ block.settings.explore_button_url }}">{{ block.settings.explore_button_text }} 
                                        <svg id="Layer_2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.04 11.49">
                                            <defs>
                                                <style>.cls-1{stroke-miterlimit:5;}.cls-1,.cls-2{fill:none;stroke:#000;stroke-width:1.5px;}.cls-2{stroke-linejoin:round;}</style>
                                            </defs>
                                            <g id="Layer_2-2">
                                                <polyline class="cls-1" points="12.45 .54 17.95 5.74 12.45 10.94"></polyline>
                                                <line class="cls-2" y1="5.74" x2="17.95" y2="5.74"></line>
                                            </g>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="solution-progress-bar">
                    <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

                <!-- Carousel Controls -->
                <div class="solution-carousel-controls">
                    <button class="carousel-control-prev" type="button" aria-label="Previous">
                        <svg id="Layer_2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.04 11.49">
                        <defs>
                            <style>.cls-1{stroke-miterlimit:5;}.cls-1,.cls-2{fill:none;stroke:#000;stroke-width:1.5px;}.cls-2{stroke-linejoin:round;}</style>
                        </defs>
                        <g id="Layer_2-2">
                            <polyline class="cls-1" points="6.59 .54 1.09 5.74 6.59 10.94"/>
                            <line class="cls-2" x1="19.04" y1="5.74" x2="1.09" y2="5.74"/>
                        </g>
                    </svg>
                    </button>
                    <button class="carousel-control-next" type="button" aria-label="Next">
                        <svg id="Layer_2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 19.04 11.49">
                        <defs>
                            <style>.cls-1{stroke-miterlimit:5;}.cls-1,.cls-2{fill:none;stroke:#000;stroke-width:1.5px;}.cls-2{stroke-linejoin:round;}</style>
                        </defs>
                        <g id="Layer_2-2">
                            <polyline class="cls-1" points="12.45 .54 17.95 5.74 12.45 10.94"/>
                            <line class="cls-2" y1="5.74" x2="17.95" y2="5.74"/>
                        </g>
                    </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

