<section class="transparent-pg-banner" 
         style="background: url({{ section.settings.main_banner_img_desktop | image_url }}) no-repeat;"
         data-image-mobile="{{ section.settings.main_banner_img_mobile | image_url }}" 
         data-image-desktop="{{ section.settings.main_banner_img_desktop | image_url }}">
    <div class="container">
        <h2 class="font-neue-light text-light">
            {{ section.settings.main_title | default: 'Default Title' }} 
            <br><span class="font-austin-italic">{{ section.settings.main_subtitle | default: 'Default Subtitle' }}</span>
        </h2>
        <p class="font-neue-roman text-light">{{ section.settings.main_txt | default: 'Default text for the banner' }}</p>
    </div>
</section>




<style type="text/css">
  .transparent-pg-banner{
        width: 100%;
        height: 800px;
        background-size: cover !important;
        background-position: center !important;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    .transparent-pg-banner h2 {
        font-size: 5.556vw;
        line-height: 4.653vw;
        letter-spacing: 0.65px;
        margin: 0px 0px 36px;
        color: rgba(249, 246, 243, 1);
        width: 463px;
        max-width: 100%;
    }
    .transparent-pg-banner h2 span{
      display: block;
      padding-top: 10px;
      font-size: 5.972vw;
      line-height: 6.111vw;
    }
    .transparent-pg-banner p {
        margin: 0px;
        font-size: 16px;
        line-height: 26px;
        letter-spacing: 0.65px;
        width: 444px;
        max-width: 100%;
        color: rgba(249, 246, 243, 1);
    }
    .transparent-pg-banner .page-width {
        width: 100%;
    }

    #MainContent {
        padding-top: 0px;
    }

    .header-wrapper {
        background: transparent;
        position: absolute;
        left: 0;
        right: 0;
        width: 100%;
    }

    .header__heading-logo {
      filter: brightness(20.5);
    }


    .shopify-section-header-sticky .header-wrapper {
      background: #efebe6;
    }

    .shopify-section-header-sticky .header__menu-item span{
      color:#333;
    }

    .shopify-section-header-sticky .header__heading-logo {
      filter: brightness(0);
    }

    /*
    ** Responsive
    */
    @media (min-width: 1500px){
        .transparent-pg-banner h2{
            font-size: 80px;
            line-height: 67px;        
        }
    }

    @media (min-width: 992px){
      .header__menu-item, .header__active-menu-item,
      a.products-menu-item{
        color:#F9F6F3 !important;
      }
    }

    @media (max-width: 991px){
      account-icon a.login.btn-mobile{
        color: #f9f6f3 !important;
      }
      .stickyHeader account-icon a.login.btn-mobile{
        color: #292521 !important;
      }
    }

    @media (max-width: 767px){
        .transparent-pg-banner {
            height: 680px;
            background-size: cover;
            background-position: center;
        }
        .transparent-pg-banner h2{
            font-size: 60px;
            line-height: 64px;
            margin-bottom: 20px;
        }
        .transparent-pg-banner h2 span{
          font-size: 64px;
          line-height: 68px;
          padding-top: 3px;
        }
    }
</style>

<script type="text/javascript">
    document.addEventListener("DOMContentLoaded", function() {
        const banner = document.querySelector(".transparent-pg-banner");
        const mobileImage = banner.getAttribute("data-image-mobile");
        const desktopImage = banner.getAttribute("data-image-desktop");

        function setMobileBackground() {
            if (window.innerWidth <= 767 && mobileImage) { 
                banner.style.background = `url(${mobileImage}) no-repeat center/cover`;
            } else if (desktopImage) {
                banner.style.background = `url(${desktopImage}) no-repeat center/cover`;
            }
        }

        setMobileBackground();
        window.addEventListener("resize", setMobileBackground);
    });

</script>

{% schema %}
{
  "name": "Banner Product Type",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Main Title"
    },
    {
      "type": "text",
      "id": "main_subtitle",
      "label": "Main Sub Title"
    },
    {
      "type": "textarea",
      "id": "main_txt",
      "label": "Main Text"
    },
    {
        "type": "image_picker",
        "id": "main_banner_img_desktop",
        "label": "Main Banner Desktop"
    },
    {
        "type": "image_picker",
        "id": "main_banner_img_mobile",
        "label": "Main Banner Mobile"
    }
  ],
  "presets": [
    {
      "name": "Banner Product Type",
      "category": "Custom"
    }
  ]
}
{% endschema %}